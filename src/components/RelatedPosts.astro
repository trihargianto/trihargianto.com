---
import { getRelatedPosts } from "../utils/relatedPosts";
import dayjs from "dayjs";

type Props = {
  currentSlug: string;
  currentTags?: string[];
};

const { currentSlug, currentTags = [] } = Astro.props;

const relatedPosts = await getRelatedPosts(currentSlug, currentTags, 4);
---

{
  relatedPosts.length > 0 && (
    <aside class="mt-16 pt-8 border-t border-gray-300 dark:border-gray-700">
      <h2 class="text-2xl font-bold mb-6">Related Posts</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {relatedPosts.map((post) => (
          <a
            href={`/blog/${post.id}`}
            class="block p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-sky-500 dark:hover:border-sky-500 transition-colors duration-150 ease-out"
          >
            <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-gray-100">
              {post.data.title}
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
              {post.data.description}
            </p>
            <time
              datetime={post.data.pubDate.toISOString()}
              class="text-xs text-gray-500 dark:text-gray-500"
            >
              {dayjs(post.data.pubDate).format("MMMM DD, YYYY")}
            </time>
          </a>
        ))}
      </div>
    </aside>
  )
}
