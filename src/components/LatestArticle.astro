---
import { kebabCase } from "lodash-es";

import Button from "./Button.astro";

interface Props {
  // Section title
  sectionTitle: string;

  // Articles
  articles: {
    title: string;
    date: string;
    slug?: string;
    link?: string;
  }[];

  // CSS Classes
  className: string;

  // A path link to see the articles when the button is clicked
  seeAllLink: string;
}

const { sectionTitle, articles, className, seeAllLink } = Astro.props;
---

<div class={className} data-animate="fadeInUp">
  <div class="mb-4 flex items-center justify-between">
    <h2>{sectionTitle}</h2>

    <Button as="a" href={seeAllLink}> See More </Button>
  </div>

  <div data-stagger="true">
    {
      articles.map((item, index) => (
        <div
          class="flex flex-row justify-between border-b-2 last:border-b-0 border-b-gray-200 py-3 dark:border-b-gray-800"
          data-animate="fadeInUp"
        >
          {item.slug ? (
            <a
              href={`/blog/${item.slug}`}
              class="font-medium hover:underline"
              style={{ viewTransitionName: kebabCase(item.title) }}
            >
              {item.title}
            </a>
          ) : (
            <a
              href={item.link}
              class="font-medium hover:underline"
              target="__blank"
              rel="noopener noreferrer"
            >
              {item.title}
            </a>
          )}

          <span class="hidden text-slate-400 md:block">{item.date}</span>
        </div>
      ))
    }
  </div>
</div>
